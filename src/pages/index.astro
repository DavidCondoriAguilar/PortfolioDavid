---
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import SocialPill from "../components/icons/SocialPill.astro";
import GitHub from "../components/icons/GitHub.astro";
import MailTo from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefCase from "../components/icons/BriefCase.astro";
import Code from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
import Footer from "../components/Footer.astro";

---

<Layout title="Portfolio de David- Desarrollador y Programador Web">
  <main class="px-4">

    <SectionContainer class="h-auto" id="inicio">
      <h1 class="text-white text-3xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-5">
        Hey soy David <a
          href="https://www.linkedin.com/in/david-condori-aguilar/"
          class="flex justify-center items-center"
          target="_blank"
          rel="noopener"
        >
          <Badge />
        </a>
      </h1>
      <h2 class="text-[16px] lg:text-[21px] text-pretty">
        Desarrollador web. De Lima Perú <span class="text-yellow-200/90"
          >Mi objetivo es ofrecer resultados atractivos</span
        >,seguros y escalables para cada proyecto en el que trabajo. <span
          class="text-red-200/90">Ya sea que esté desarrollando</span
        > o creando interfaces de usuario atractivas.
      </h2>
      <nav class="flex gap-x-2 lg:gap-x-4 mt-10 py-8 lg:py-14">

        <SocialPill href="https://www.linkedin.com/in/david-condori-aguilar/">
          <LinkedIn class="size-6 text-white" />
           LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/DavidCondoriAguilar">
          <GitHub class="size-6 text-white" />
           GitHub
        </SocialPill>
        <SocialPill href="mailto:davids.condori.aguilar@gmail.com">
          <MailTo class="size-6 text-white" />
           Gmail
        </SocialPill>
      </nav>


    </SectionContainer>

    <SectionContainer class="" id="experiencia">
      <h2 class="text-2xl font-semibold py-5 flex gap-x-2 items-center">
        <BriefCase class="size-7" />
         Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer class="" id="proyectos">
      <h2 class="text-2xl font-semibold py-5 flex gap-x-2 items-center">
        <Code class="size-7" />
         Proyectos
      </h2>
      <Projects />
    </SectionContainer>

  </main>
  
  <Footer/>
  
</Layout>
