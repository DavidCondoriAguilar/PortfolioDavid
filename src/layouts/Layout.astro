<style is:global>
  :root {
    color-scheme: light dark;
    background-color: rgb(10, 10, 10);
  }
  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
