---
import Reactt from "./icons/React.astro";
import Tailwind from "./icons/TailwindCSS.astro";
import Bootstrap from "./icons/Bootstrap.astro";
import CSS from "./icons/Css.astro";

const TAGS = {
  REACT: {
    name: "React",
    class: "bg-black text-white",
    icon: Reactt,
  },
  TAILWIND: {
    name: "TailwindCSS",
    class: "bg-black text-white",
    icon: Tailwind,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-black text-white",
    icon: Bootstrap,
  },
  CSS: {
    name: "Css",
    class: "bg-black text-white",
    icon: CSS,
  },
};
const PROJECTS = [
  {
    tittle: "Project 1",
    description: "Lorem imspun dolir amet, consectuter adicpiscing elit",
    link: "#",
    github: "#",
    image: "images/portFolio.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.BOOTSTRAP, TAGS.CSS],
  },
];
---

{
  PROJECTS.map(({ tittle, description, tags, image }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{tittle}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="py-2 flex gap-x-4 flex-row">
        {tags.map((tag) => (
          <li>
            <span class={"flex gap-x-1 lg:gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 items-center text-pretty"}>
              <tag.icon class="size-6 " />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded"
        src={image}
        alt={"Captura de pantalla del proyecto ${image}"}
      />
    </article>
  ))
}
